<Page x:Class="Synthesis.resultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Synthesis"
      mc:Ignorable="d" 
      d:DesignHeight="330" d:DesignWidth="556"
      Title="modPage">

    <Grid x:Name="pageGrid" Margin="10,10,10,10">
        <Label Content="                             Results" FontFamily="Bahnschrift Light Condensed" FontSize="36" Margin="0,-40,0,0"/>
        <ListBox x:Name="listResults" HorizontalAlignment="Left" Height="290" Margin="10,0,0,0" VerticalAlignment="Center" Width="205" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="restartBtn" Content="↻" HorizontalAlignment="Left" Height="37" Margin="0,-38,0,0" VerticalAlignment="Top" Width="42" FontSize="24" FontFamily="MS UI Gothic" Click="restartClick"/>
        <ListBox x:Name="pathList" HorizontalAlignment="Left" Height="290" VerticalAlignment="Center" Width="306" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="220,0,0,0"/>
    </Grid>
</Page>
