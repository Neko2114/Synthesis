<Window x:Class="Synthesis.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Synthesis"
        mc:Ignorable="d"
        Title="Input" Height="129" Width="560" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid HorizontalAlignment="Center" Height="392" Margin="0,11,0,0" VerticalAlignment="Top" Width="540">
        <Separator HorizontalAlignment="Center" Height="16" Margin="0,15,0,0" VerticalAlignment="Top" Width="520" Visibility="Hidden"/>
        <Button x:Name="confirm" Content="Ok" HorizontalAlignment="Left" Height="20" Margin="480,49,0,0" VerticalAlignment="Top" Width="50" Click="confirm_Click"/>
        <TextBox x:Name="optionText" HorizontalAlignment="Center" Height="19" Margin="0,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="520"/>
    </Grid>

</Window>
