        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns:local="clr-namespace:Synthesis"
        mc:Ignorable="d"
        Title="Similar Authors in Mods" Height="569" Width="1079" Background="#FF252525">
    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <Grid x:Name="modInfoGrid" Margin="10,6,10,6">
            <StackPanel x:Name="similarInfoStackPanel" Margin="10,10,0,26"/>
        </Grid>
    </ScrollViewer>
</mah:MetroWindow>
